- if artifact_files.empty?
  %p.error
    This build did not include any matching artifacts.
- else
  %ul
    - artifact_files.each do |artifact|
      %li
        %a.artifact_download{:href=>"#{file_url artifact}"}
          .artifact-info
            %span.artifact-name
              = File.basename(artifact) 
            %span.artifact-size
              (#{file_size artifact} MB)

